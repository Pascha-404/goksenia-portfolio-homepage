<%- include ('../partials/header.ejs') %>
<%- include('../partials/navbar/defaultNavbar.ejs') %>
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/authenticate.css">

<main class="content-wrap">
    <div class="bg-accent"></div>

    <section class="authenticate-wrap project-form">

        <section class="authenticate">
            <form action="/login" method="POST">

                <h1>Login</h1>

                <div class="section-wrap">
                    <section class="username flex-between">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" class="input-txt" required>
                    </section>

                    <section class="password">
                        <div class="flex-between">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="input-txt" required>
                        </div>
                    </section>
                </div>

                <button class="submit-btn">Submit</button>
            </form>
        </section>
    </section>
</main>


